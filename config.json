{
	"name": "Video Library Module",

	"namespace": "Vanderbilt\\VideoLibraryModule",

	"description": "Create and manage list of YouTube and/or Vimeo urls to embed in content blocks",

    "authors": [
        {
            "name": "Travis M. Wilson",
            "email": "datacore@vumc.org",
			"institution": "Vanderbilt University Medical Center"
        }
	],
	
	"framework-version": 4,
	
	"permissions": [
		"redcap_every_page_top"
	],

	"no-auth-pages":[
		"get-videos"
	],

	"links": {
		"project": [
			{
				"name": "Get Videos",
				"icon": "user_list",
				"url": "get-videos.php?NOAUTH"
			},
			{
				"name": "Video Library Configuration",
				"icon": "gear",
				"url": "config.php"
			}
		]
	},

	"project-settings": [
		{
			"key": "suggested_videos_on",
			"name": "Show suggested videos at end of video?",
			"type": "radio",
			"choices": [
				{
					"value": 0,
					"name": "No"
				},
				{
					"value": 1,
					"name": "Yes"
				}
			],
			"default": 0
		},
		{
			"key": "client_or_server",
			"name":"Use alternate URL for library source?",
			"type": "radio",
			"choices": [
				{
					"value": 1,
					"name": "Yes"
				},
				{
					"value": 2,
					"name": "No"
				}
			]
		},
		{
			"key": "video_library_url",
			"name":"Alternate Video Library URL",
			"type": "text",
			"branchingLogic": {
				"field": "client_or_server",
				"value": "1"
			}
		},
		{
			"key": "video_data",
			"name": "Video",
			"repeatable": true,
			"branchingLogic": {
				"field": "client_or_server",
				"value": "2"
			},
			"type": "sub_settings",
			"sub_settings": [
				{
					"key": "video_url",
					"name": "YouTube / Vimeo video URL",
					"type": "text"
				},
				{
					"key": "video_title",
					"name": "Title",
					"type": "text"
				},
				{
					"key": "video_description",
					"name": "Description",
					"type": "textarea"
				},
				{
					"key": "video_tags",
					"name": "Tag(s)",
					"type": "text",
					"repeatable": true
				}
			]
		}
	]
}
